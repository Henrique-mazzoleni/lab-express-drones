<h2>Available drones</h2>
<a href="/drones/create">Create a new drone</a>
<ul>
    {{#each allDrones}}
        <li>
            <h3>Drone Name: {{name}}</h3>
            <p>Number of Propellers: {{propellers}}</p>
            <p>Maximum Speed: {{speed}}</p>
            <a href="/drones/{{_id}}/edit">Edit</a>
            <form action="/drones/{{_id}}/delete" method="post">
                <button type="submit">Delete</button>
            </form>
        </li>
    {{/each}}
</ul>